{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",
        "forceConsistentCasingInFileNames": true,
        "types": [
            "svelte",
            "tampermonkey"
        ],
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "module": "esnext",
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "target": "es2018",
        "allowSyntheticDefaultImports": true,
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "exclude": [
        "build",
        "dist",
        "node_modules"
    ]
}